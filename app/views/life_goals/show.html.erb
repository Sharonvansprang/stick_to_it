<% if current_user %>
<div class="color-padding-sm"></div>
<div class="banner-image"></div>
<div class="banner-container">
  <div class="banner-life-goals">
    <h1><%= @life_goal.name %></h1>
    <br/>
    <br/>
    <h2>These are all the challenges you can still sign up for!</h2>
    <div class="container">
      <div class="row">
        <% @challenges.each do |challenge| %>
        <% if !current_user.challenges.include?(challenge)%>
        <div class="col-xs-12 col-md-6">
          <div class="card">
            <h2><%= challenge.name %> </h2>
            <%= challenge.description %>
            <h3><%= link_to "Read more..", challenge_path(challenge) %></h3>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% else %>
You cannot access this page
<% end %>
